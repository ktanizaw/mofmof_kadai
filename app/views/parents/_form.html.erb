<%= form_for(parent) do |f| %>
  <% if parent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(parent.errors.count, "error") %> prohibited this parent from being saved:</h2>

      <ul>
      <% parent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :物件名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :賃料 %>
    <%= f.number_field :price %>円
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :築年数 %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :備考 %>
    <%= f.text_area :other %>
  </div>

  <hr>
  <% n = 0 %>
  <%= f.fields_for :childs do |f| %>
    <h3><%= "最寄り駅#{n += 1}" %></h3>

    <div class="field">
      <%= f.label :路線名 %>
      <%= f.text_field :route_name %>
    </div>

    <div class="field">
      <%= f.label :駅名 %>
      <%= f.text_field :station_name %>
    </div>

    <div class="field">
      <%= f.label :徒歩分数 %>
      <%= f.number_field :walking_minutes %>分
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit button_text %>
  </div>
<% end %>

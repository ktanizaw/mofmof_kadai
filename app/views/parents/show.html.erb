<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @parent.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @parent.price %><%="円"%>
</p>

<p>
  <strong>住所:</strong>
  <%= @parent.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @parent.age %><%="年"%>
</p>

<p>
  <strong>備考:</strong>
  <%= @parent.other %>
</p>

<hr>
<tbody>
  <% n = 0 %>
  <% @childs.each do |child|%>
    <h3>最寄り駅<%= n += 1 %></h3>
    <p>
      <strong>路線名:</strong>
      <%= child.route_name %>
    </p>

    <p>
      <strong>駅名:</strong>
      <%= child.station_name %>
    </p>

    <p>
      <strong>徒歩分数:</strong>
      <%= "#{child.walking_minutes}分" %>
    </p>
  <% end %>
</tbody>

<%= link_to '編集', edit_parent_path(@parent) %> |
<%= link_to '戻る', parents_path %>
